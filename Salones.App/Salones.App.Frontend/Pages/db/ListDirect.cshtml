@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<h1>Listado de directivos</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">id </th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Tipo de documento</th>
            <th scope="col">Numero de documento</th>
            <th scope="col">Edad</th>
            <th scope="col">Estado COVID</th>
        </tr>
     </thead>
      @foreach (var direc in ListDirect.getAll())
    {
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td> @direc.id </td>
            <td> @direc.nombres </td>
            <td> @direc.apellidos </td>
            <td> @direc.tipoIdentificacion </td>
            <td> @direc.identificacion </td>
            <td> @direc.edad </td>
            <!-- <td> @direc.estadoCovid </td> -->
            <td> ver detalles</td>
        </tr>
       </tbody>
    }
</table>

