<h1>Formulario para introducir nuevas personas</h1>
<form name="FormAddPersona">
<label for="id"                 > id                </label>  <input id="id" >		     	     <br>
<label for="nombres"            > nombres           </label>  <input id="nombres" >			     <br>
<label for="apellidos"          > apellidos         </label>  <input id="apellidos" >		     <br>
<label for="tipoIdentificacion" > tipoIdentificacion</label>  <input id="tipoIdentificacion">     <br>
<label for="identificacion"     > identificacion    </label>  <input id="identificacion" >	     <br>
<label for="edad"               > edad              </label>  <input id="edad" >				     <br>
<label for="estadoCovid"        > estadoCovid       </label>  <input id="estadoCovid" >		     <br>

    <select id="SelTipoPersona" class="form-control" onchange="CambiarTipoPersona">
        <option value=0>Seleccione una opción</option>
        <option value=1>Estudiante</option>
        <option value=2>Profesor</option>
        <option value=3>Directivo</option>
        <option value=4>Personal de Aseo</option>
    </select><br>





<!-- Se supone que estos campos se hacen visibles o invisibles según el valor del selector inputState -->
<!-- https://www.w3schools.com/tags/att_disabled.asp 
https://www.w3schools.com/jsref/event_onselect.asp  -->

<!-- Estudiantes -->
<fieldset id="FSEstudiantes" hidden = true>
    <legend>Estudiantes</legend>
<label for="carrera"  > carrera  </label>  <input id="carrera" >		<br>
<label for="semestre" > semestre </label>  <input id="semestre" >	<br>
<label for="facultad" > facultad </label>  <input id="facultad" >	<br>
</fieldset>

<!-- Profesores -->
<fieldset id="FSProfes" hidden = true>
    <legend>Profesores</legend>
<label for="departamento"> Departamento  </label>  <input id="departamento" >		<br>
<label for="materia"     > materia  </label>  <input id="materia" >	<br>
<label for="facultad"    > facultad </label>  <input id="facultad" >	<br>
</fieldset>

<!-- Directivos -->
<fieldset id="FSDirectivo" hidden = true>
    <legend>Personal Administrativo</legend>
<label for="Unidad"> Unidad  </label>  <input id="Unidad" >		<br>
</fieldset>

<!-- Personal Aseo -->
<fieldset id="FSAseo" hidden = true>
    <legend>Personal de Aseo</legend>
<label for="turno"> Turno  </label>  <input id="turno" >		<br>
</fieldset>

<script type="text/javascript">
    document.getElementById("SelTipoPersona").onchange = function() {CambiarTipoPersona()};

    function CambiarTipoPersona()
    {
        const Tipo = document.getElementById("SelTipoPersona");
        if (Tipo.value == 0){
            document.getElementById("FSEstudiantes").hidden = true;
            document.getElementById("FSProfes").hidden = true;
            document.getElementById("FSDirectivo").hidden = true;
            document.getElementById("FSAseo").hidden = true;
        }

        if (Tipo.value == 1){
            document.getElementById("FSEstudiantes").hidden = false;
            document.getElementById("FSProfes").hidden = true;
            document.getElementById("FSDirectivo").hidden = true;
            document.getElementById("FSAseo").hidden = true;

        }
        if (Tipo.value == 2){
            document.getElementById("FSEstudiantes").hidden = true;
            document.getElementById("FSProfes").hidden = false;
            document.getElementById("FSDirectivo").hidden = true;
            document.getElementById("FSAseo").hidden = true;


        }
        if (Tipo.value == 3){
           document.getElementById("FSEstudiantes").hidden = true;
            document.getElementById("FSProfes").hidden = true;
            document.getElementById("FSDirectivo").hidden = false;
            document.getElementById("FSAseo").hidden = true;
        }
        if (Tipo.value == 4){
           document.getElementById("FSEstudiantes").hidden = true;
            document.getElementById("FSProfes").hidden = true;
            document.getElementById("FSDirectivo").hidden = true;
            document.getElementById("FSAseo").hidden = false;
        }
    }


</script>

</form>