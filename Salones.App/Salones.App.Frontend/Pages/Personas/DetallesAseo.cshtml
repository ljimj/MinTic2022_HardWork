@page
@model Salones.App.Frontend.Pages.DetallesAseoModel
@{
    ViewData["Title"] = "Listas";
}

<h1>Detalles Personal Aseo</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombres</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Tipo identificacion</th>
            <th scope="col">Numero de documento</th>
            <th scope="col">Edad</th>
            <th scope="col">Turno</th>
            <th scope="col">Sintomas</th>
            <th scope="col">Tipo de Sintomas</th>
            <th scope="col">Estado Covid</th>
            <th scope="col">Fecha Diagnostico</th>
            <th scope="col">Periodo Aislamiento </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td> @Model.personaAseo.nombres </td>
            <td> @Model.personaAseo.apellidos </td>
            <td> @Model.personaAseo.tipoIdentificacion </td>
            <td> @Model.personaAseo.identificacion </td>
            <td> @Model.personaAseo.edad </td>
            <td> @Model.personaAseo.turno </td>
            <td> @Model.personaAseo.estadoCovid.sintomas</td>
            <td> @Model.personaAseo.estadoCovid.tipoSintomas</td>
            <td> @Model.personaAseo.estadoCovid.estadoCovid</td>
            <td> @Model.personaAseo.estadoCovid.fechaDiagnostico</td>
            <td> @Model.personaAseo.estadoCovid.periodoAislamiento</td>

        </tr>
    </tbody>
</table>
<a class="nav-link" asp-area="" asp-page="/Personas/ListAseo">Volver</a>
